@using NonFactors.Mvc.Grid
@model Sistema_Fallas_IMSS.ViewModels.VM_Hospital
@(Html.Grid(Model.Hospitales)
    .Build(columns =>
    {
        columns.Add(model => model.Id).Hidden();
        columns.Add(model => model.Nombre).Titled("Nombre");
        columns.Add(model => model.Director).Titled("Director");
        columns.Add(model => model.Estado).Titled("Estado");
        columns.Add(model => model.Municipio).Titled("Municipio");
        columns.Add(model => model.Direccion).Titled("Direccion");
        columns.Add(model => model.Id).Titled("Editar").Encoded(false).Css("text-center").RenderedAs(model => $"<a href='#' onclick='AbrirModalHospital({model.Id})' data-placement='left'><span style='text-align:center'><i class='fa-solid fa-pen-to-square btn btn-info'></i></span></a>");
    })
.Empty("Sin registros encontrados")
.Named("gridHospitales")
.Id("gridHospitales")
.Pageable(pager =>
{
    pager.RowsPerPage = 10;
})
)
